@model IEnumerable<EnvisionAGreenLife.Models.Herb>
@using MvcBreadCrumbs

@{
    ViewBag.Title = "Grow Your Own Herb";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- view logic for the main grow your won herb page-->
<div class="page-title-section">
    <div class="container">
        <h1 class="page-title">Grow Your Own Herb</h1>
    </div>
</div>

<div class="breadcrum" style="margin-left:10%">
    @Html.Raw(BreadCrumb.Display())
</div>

<!-- logic to display the types fo herbs in grid of cards with images and names-->
<div class="herb-collection-section">
