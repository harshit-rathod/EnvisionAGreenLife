    <div class="herb-collection-column w-row">
        <div class="herb-collection-column1 w-col w-col-4 w-col-stack">
            <div>
                <a href='@Url.Action("Details", "Herbs", new { id = 1 })'>
                    <img src="~/Images/Basil.png" width="300" height="300" alt="Basil" style="filter: brightness(0.65);">
                </a>
                <button onclick="location.href='@Url.Action("Details", "Herbs", new { id = 1 })'" type="button" class="herb-col-btn btn light outline w-button" Style="margin-left:-75px; left:50%; top:77%;">
                    Basil
