@using MvcBreadCrumbs
@model EnvisionAGreenLife.Models.clothes_dryer

@{ var SpList = ViewData["SimilarProducts"] as List<EnvisionAGreenLife.Models.clothes_dryer>;}


@{
    ViewBag.Title = "Clothes Dryer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* this page contains the view logic for the appliance details page design *@
<div class="page-title-section">
    <div class="container">
        <h1 class="page-title">@Model.Brand - @Model.Model_No</h1>
    </div>
</div>

<div class="breadcrum" style="margin-left:10%">
    @Html.Raw(BreadCrumb.Display())
</div>

@* code to display the different appliance in a grid of cards consiting images and model number of AC *@
<div class="section-3" style="margin-top:40px">
    <div class="w-row">
        <div class="w-col w-col-6">
            <div class="appliance-detail-image-wrapper">
                @if (Model.Clothes_Dryer_Id % 9 == 1)
                {
                    <img src='@Url.Content("~/Images/cw1.png")' alt="Clothes_Dryer" class="appliance-card-image" style="width:80%; border-color:transparent;" />
                }
                else
                if (Model.Clothes_Dryer_Id % 9 == 2)
                {
                    <img src='@Url.Content("~/Images/cw2.png")' alt="Clothes_Dryer" class="appliance-card-image" style="width:80%; border-color:transparent;" />
                }
                else
                if (Model.Clothes_Dryer_Id % 9 == 3)
                {
                    <img src='@Url.Content("~/Images/cw3.png")' alt="Clothes_Dryer" class="appliance-card-image" style="width:80%; border-color:transparent;" />
                }
                else
                if (Model.Clothes_Dryer_Id % 9 == 4)
                {
                    <img src='@Url.Content("~/Images/cw4.png")' alt="Clothes_Dryer" class="appliance-card-image" style="width:80%; border-color:transparent;" />
                }
                else
                if (Model.Clothes_Dryer_Id % 9 == 5)
                {
                    <img src='@Url.Content("~/Images/cw5.png")' alt="Clothes_Dryer" class="appliance-card-image" style="width:80%; border-color:transparent;" />
                }
                else
                if (Model.Clothes_Dryer_Id % 9 == 6)
                {
                    <img src='@Url.Content("~/Images/cw6.png")' alt="Clothes_Dryer" class="appliance-card-image" style="width:80%; border-color:transparent;" />
                }
                else
                if (Model.Clothes_Dryer_Id % 9 == 7)
                {
                    <img src='@Url.Content("~/Images/cw7.png")' alt="Clothes_Dryer" class="appliance-card-image" style="width:80%; border-color:transparent;" />
                }
                else
                if (Model.Clothes_Dryer_Id % 9 == 8)
                {
                    <img src='@Url.Content("~/Images/cw8.png")' alt="Clothes_Dryer" class="appliance-card-image" style="width:80%; border-color:transparent;" />
                }
                else
                if (Model.Clothes_Dryer_Id % 9 == 0)
                {
                    <img src='@Url.Content("~/Images/cw9.png")' alt="Clothes_Dryer" class="appliance-card-image" style="width:80%; border-color:transparent;" />
                }
            </div>
        </div>
        <div class="column-6 w-col w-col-6" style="padding-top: 0px;">
            <p class="paragraph-3"><b>@Model.Brand @Model.Cap Kg @Model.Control Clothes Dryer</b></p>
            <p class="paragraph-3" style="font-size: 30px; text-align: center;">Energy Rating: @Model.New_Star</p>
            <hr />
            <p class="paragraph-2" style="text-align:justify">
                <strong>Clothes Dryer Description:<br></strong>This @Model.Brand @Model.Control dryer has the capacity to dry
                @Model.Cap kg, which is perfect for households of three or four. A heat pump dryer dries fabrics
                more carefully and efficiently than other types of dryers, which protects
                clothes and helps with power bill saving
            </p>
            <hr />
            @* code to display the details of the selected appliance with collapse-able specification. *@
            <div class="accordion-wrapper">
                <div class="accordion-item">
                    <div class="accordion-item-trigger">
                        <h4 class="heading-7">Specification                        +</h4>
                    </div>
                    <div class="accordion-item-content">
                        <dl class="dl-horizontal">
                            <dt>
                                Brand
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Brand)
                            </dd>

                            <dt>
                                Model number
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Model_No)
                            </dd>

                            <dt>
                                Rated capacity
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Cap) KG
                            </dd>

                            <dt>
                                Made in
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Country)
                            </dd>

                            <dt>
                                Sold in
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Sold_in)
                            </dd>

                            @if (Model.Product_Website != null)
                            {
                                <dt>
                                    Product website
                                </dt>

                                <dd>
                                    <a href="@Model.Product_Website" target="_blank">@Model.Product_Website </a>
                                </dd>
                            }

                            @if (Model.Representative_Brand_URL != null)
                            {
                                <dt>
                                    Brand Url
                                </dt>

                                <dd>
                                    <a href="@Model.Representative_Brand_URL" target="_blank">@Model.Representative_Brand_URL </a>
                                </dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
