@using MvcBreadCrumbs
@{
    ViewBag.Title = "Compost In Suburban Household";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .composting-detail-section {
        margin-top: 65px;
    }

    .composting-columns {
        padding-right: 10%;
        padding-left: 10%;
    }

    .compost-image-wrapper {
        text-align: center;
    }

    .compost-property-column {
        padding-right: 5%;
        padding-left: 5%;
    }

    .compost-property {
        padding-right: 0px;
        text-align: center;
    }

    .compost-collapse-columns {
        padding-right: 10%;
        padding-left: 10%;
    }

    .compost-collapse-heading-column {
        margin-top: 21px;
    }

    .heading-7 {
        margin-top: 10px;
        text-align: left;
        cursor: pointer;
    }

    .column-9 {
        text-align: center;
    }

    .column-8 {
        text-align: center;
    }

    .column-12 {
        border-left: 1px solid #000;
        text-align: center;
    }

    .accordion-item-content {
        width: auto;
    }

    .herb-heading {
        text-align: center;
    }
</style>

<body>
    <div class="page-title-section">
        <div class="container">
            <h1 class="page-title">Compost in Suburban household</h1>
        </div>
    </div>

    <div class="breadcrum" style="margin-left:10%">
        @Html.Raw(BreadCrumb.Display())
    </div>

    <!-- logic for the view displaying all the info related to the related category-->

    <div class="composting-detail-section">
        <div class="composting-columns w-row">
            <div class="w-col w-col-4 w-col-stack">
                <div class="compost-image-wrapper">
                    <img src="~/Images/suburban_bin.png" alt="suburban_bin">
                </div>
            </div>
            <div class="compost-property-column w-col w-col-8 w-col-stack">
                <p class="herb-description" style="text-align:justify">
                    <strong>With a backyard and a garden? This is built for horning your composting skills. Other than traditional options such as composting tumbler or worm box, you can even DIY your own composting box. Check out more in what can and cannot be put into composting box and the buying guides.  </strong>
                </p>
                <div class="w-row">
                    <div class="compost-property w-col w-col-4 w-col-stack">
                        <h4>Compost Type</h4>
                        <div class="herb-property">
                            <img src="~/Images/composting_type.jpg" width="100" height="100" alt="composting_type">
                            <p> Enclosed bin <br> Compost tumbler <br> DIY bins</p>

                        </div>
                    </div>
                    <div class="column-8 w-col w-col-4 w-col-stack">
                        <div class="herb-property">
                            <h4>Waste Type</h4><img src="~/Images/waste_type.png" width="100" height="100" alt="waste_type">
                            <p>Kitchen waste<br>Garden wastes <br> Household  wastes</p>
                        </div>
                    </div>
                    <div class="column-9 w-col w-col-4 w-col-stack">
                        <div class="herb-property">
                            <h4>Purchase</h4><img src="~/Images/shopping.png" width="100" height="100" alt="shopping">
                            <div><a href="https://www.etsy.com/au/listing/697974078/diy-single-double-compost-bin-plans-with?gpla=1&gao=1&&utm_source=google&utm_medium=cpc&utm_campaign=shopping_au_en_au_b-craft_supplies_and_tools-other-other&utm_custom1=5f4ba87f-e361-4746-a286-b563022efb8f&utm_content=go_344340968_19782570128_78803052728_pla-350250224874_c__697974078enau&utm_custom2=344340968&gclid=EAIaIQobChMI0srAwf-46QIVmh0rCh1w_gVmEAQYAyABEgKKq_D_BwE" target="_blank" class="herb-shopping-btn w-button">Click to buy</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="herb-step-section" style="padding-top:2%;">
        <div class="compost-collapse-columns w-row">
            <div class="w-col w-col-6">
                <div class="herb-collapse-container w-container">
                    <div class="accordion-wrapper">
                        <div class="accordion-item">
                            <div class="accordion-item-trigger">
                                <div class="w-row">
                                    <div class="w-col w-col-3"><img src="~/Images/do.jpg" width="80" height="80" alt="" class="image-3"></div>
                                    <div class="compost-collapse-heading-column w-col w-col-9">
                                        <h4 class="heading-7">What to compost                +</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item-content">
                                <p style="padding-top: 5%; line-height:1.6;">
                                    •	Fruits and vegetables<br><br>
                                    •	Eggshells<br><br>
                                    •	Coffee grounds and filters<br><br>
                                    •	Tea bags<br><br>
                                    •	Nut shells<br><br>
                                    •	Shredded newspaper<br><br>
                                    •	Cardboard<br><br>
                                    •	Paper<br><br>
                                    •	Yard trimmings<br><br>
                                    •	Grass clippings<br><br>
                                    •	Houseplants<br><br>
                                    •	Hay and straw<br><br>
                                    •	Leaves<br><br>
                                    •	Sawdust<br><br>
                                    •	Wood chips<br><br>
                                    •	Cotton and Wool Rags<br><br>
                                    •	Dryer and vacuum cleaner lint<br><br>
                                    •	Hair and fur<br><br>
                                    •	Fireplace ashes<br>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column-12 w-col w-col-6">
                <div class="herb-collapse-container w-container">
                    <div class="accordion-wrapper">
                        <div class="accordion-item">
                            <div class="accordion-item-trigger">
                                <div class="w-row">
                                    <div class="w-col w-col-3"><img src="~/Images/donot.jpg" width="80" height="80" alt=""></div>
                                    <div class="compost-collapse-heading-column w-col w-col-9">
                                        <h4 class="heading-7">What not to compost                +</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item-content">
                                <p style="text-align:left; padding-top: 5%;  line-height:1.6;">
                                    •	Black walnut tree leaves or twigs<br>
                                    - May release harmful products for plants<br><br>
                                    •	Coal or charcoal ash<br>
                                    - Those may contain detrimental product harming the plants<br><br>
                                    •	Dairy products (e.g., butter, milk, sour cream, yogurt) and eggs <br>
                                    - May attract rodents and produce poor smell<br><br>
                                    •	Diseased or insect-ridden plants<br>
                                    - Those may spread to other plants<br><br>
                                    •	Fats, grease, lard, or oils <br>
                                    - May create bad odour and attract insects<br><br>
                                    •	Meat or fish bones and scraps <br>
                                    - May lead to rodents<br><br>
                                    •	Pet wastes <br>
                                    - May contain parasites or harmful bacteria for human health<br><br>
                                    •	Yard trimmings treated with chemical pesticides<br>
                                    - Can have detrimental effects on the plants<br><br>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>