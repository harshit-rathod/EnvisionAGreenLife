@{
    ViewBag.Title = "Home Page";
}

<style>
    .btn.light.outline {
        position: relative;
        height: 40px;
        margin-top: -20px;
        margin-left: 0px;
        float: none;
        clear: none;
        color: #f9f9f9;
        font-weight: 800;
        text-align: center;
        left: auto;
        top: auto;
    }
</style>

<!-- this is the logic to place all the elements on our home page like search bar, navigation bar, the hero section and the flipping tiles-->

<div class="hero-section">
    <div class="container" style="text-align:center;">
                <div class="hero-wrapper" style="text-align:center;">
                    <h2 style="color:aliceblue;">Live a Sustainable Lifestyle in Your Household</h2>
                    <div class="hero-button-wrapper" style="margin-top: 30px; width: 200px; position: relative; left: -100px; margin-left: 50%;">
                        <a href="@Url.Action("Quiz","Home")" class="btn light outline w-button" style="text-align: center; width: 200px; font-weight: 400; font-size: large;">Start Assessment</a>
                </div>
            </div>
    </div>
</div>

<div class="support-section">
    <div class="container">

        <div class="shop-local-section">
            <div class="container shop-local-container">
                <div class="shop-local-wrapper">
                    <div class="shop-local-left"></div>
                    <div class="shop-local-right">
                        <div class="shop-local-content-wrapper">
                            <h3>Envison a Green Life</h3>
                            <p>is a website that focuses on encouraging Victorian households to switch to smart appliances, thereby creating awareness regarding the growing issue of climate change. Additionally, we also focus on food wastage in Victorian households and encourage concepts such as recycling, composting.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <h2 style="text-align:center;">Three Approaches to Live a Sustainable Lifestyle</h2>
        <br>
        <div class="support-wrapper" style="text-align: center;">
            <div class="support-column">
                <div class="card-text-wrapper">
                    <p><strong>Switch to our recommended energy-efficient products</strong></p>
                </div>
                <img src="~/Images/down-arrow.png" style="width: 40px;" />
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <div class="support-square">
                                <div class="support-square-text">Save <br>energy</div><img src="~/Images/Circle.svg" alt="Circle Decoration in Shop Products Block" class="support-square-image">
                            </div>
                        </div>
                        <div class="flip-card-back">
                            <div class="support-square">
                                <div class="support-square-text">
                                    <a href="@Url.Action("AppliancesType", "Home")">
                                        <img src="~/Images/SaveEnergy.png">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="support-column" style="text-align:center;">
                <div class="card-text-wrapper">
                    <p><strong>Reduce your waste from growing your own herbs and making left-over recipes</strong></p>
                </div>
                <img src="~/Images/down-arrow.png" style="width: 40px;" />
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <div class="support-square">
                                <div class="support-square-text">Reduce <br />waste</div><img src="~/Images/Triangle.svg" alt="Triangle Decoration in Donate Block" class="support-square-image triangle">
                            </div>
                        </div>
                        <div class="flip-card-back">
                            <div class="support-square">
                                <a href="@Url.Action("ReduceFoodWaste", "Home")">
                                    <img src="~/Images/FoodWaste.png">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="support-column" style="text-align:center;">
                <div class="card-text-wrapper">
                    <p><strong>Find out where you can recycle your appliances and how to compost your wastes</strong></p>
                </div>
                <img src="~/Images/down-arrow.png" style="width: 40px;" />
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <div class="support-square">
                                <div class="support-square-text">Reuse</div><img src="~/Images/Rectangle.svg" alt="Rectangle Decoration in Buy Gift Cards Block" class="support-square-image rectangle">
                            </div>
                        </div>
                        <div class="flip-card-back">
                            <div class="support-square">
                                <a href="@Url.Action("Composting", "Home")">
                                    <img src="~/Images/reuse.png">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

