@using PagedList.Mvc
@using PagedList.Mvc
@using MvcBreadCrumbs
@model  EnvisionAGreenLife.ViewModel.RList

@{
    ViewBag.Title = "Refrigerator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <body>
        <div class="page-title-section">
            <div class="container">
                <h1 class="page-title">Refrigerator</h1>
            </div>
        </div>
        <div class="breadcrum" style="margin-left:10%">
            @Html.Raw(BreadCrumb.Display())
        </div>
        <div class="content-section" style="padding-top: 35px;">
            <p class="paragraph">Keep your food or drinks chilled by using an energy efficient refrigerator</p><br />
            <form asp-action="Index" method="get" class="appliance-collection-search-bar w-form">
                <input type="search" class="appliance-collection-search w-input" maxlength="256" name="SearchString" value="@ViewData["currentFilter"]" placeholder="Find by brand…" id="search" required="" autocomplete="off">
                @Html.DropDownList("Ratings", null, htmlAttributes: new { @class = "recipe-dropdown" })
                <input type="submit" value="Search" class="appliancec-collection-search-but w-button">
            </form>
            <a href="@Url.Action("TopRecommendations", "refrigerators")" class="button-3 w-button">Top Recommendations</a>
        </div>

        @* iterative code to display all the appliance in database in grids of cards.  *@

        <div class="section-3">
            <div class="w-layout-grid grid-3">
                @{int x = 0;}
                @if (Model != null)
                {
                    foreach (var item in Model.Refrigerators)
                    {
                        x++;
                <div class="appliance-card">
                    @{
                        switch (item.Star2009)
                        {
                            case 5m:
                                <text>
                                    <img src='@Url.Content("~/Images/5star.png")' alt="5star" class="applicance-recommend-image" />
                                </text>
                                break;
                            case 4.5m:
                                <text>
                                    <img src='@Url.Content("~/Images/4.5star.png")' alt="4.5star" class="applicance-recommend-image" />
                                </text>
                                break;
                            case 4m:
                                <text>
                                    <img src='@Url.Content("~/Images/4star.png")' alt="4star" class="applicance-recommend-image" />
                                </text>
                                break;
                            case 3.5m:
                                <text>
                                    <img src='@Url.Content("~/Images/3.5star.png")' alt="3.5star" class="applicance-recommend-image" />
                                </text>
                                break;
                            case 3m:
                                <text>
                                    <img src='@Url.Content("~/Images/3star.png")' alt="3star" class="applicance-recommend-image" />
                                </text>
                                break;
                            case 2.5m:
                                <text>
                                    <img src='@Url.Content("~/Images/2.5star.png")' alt="2.5star" class="applicance-recommend-image" />
                                </text>
                                break;
                            case 2m:
                                <text>
                                    <img src='@Url.Content("~/Images/2star.png")' alt="2star" class="applicance-recommend-image" />
                                </text>
                                break;
                            case 1.5m:
                                <text>
                                    <img src='@Url.Content("~/Images/1.5star.png")' alt="1.5star" class="applicance-recommend-image" />
                                </text>
                                break;
                            case 1m:
                                <text>
                                    <img src='@Url.Content("~/Images/1star.png")' alt="1star" class="applicance-recommend-image" />
                                </text>
                                break;
                            case 0.5m:
                                <text>
                                    <img src='@Url.Content("~/Images/0.5star.png")' alt="0.5star" class="applicance-recommend-image" />
                                </text>
                                break;
                        }
                    }
                    <a href='@Url.Action("Details", "refrigerators",new { id = @item.Refrigerator_Id })'>
                        @if (item.Refrigerator_Id % 9 == 1)
                        {
                            <img src='@Url.Content("~/Images/refrigerator1.png")' alt="Refrigerator" class="appliance-card-image" />
                        }
                        else
                        if (item.Refrigerator_Id % 9 == 2)
                        {
                            <img src='@Url.Content("~/Images/refrigerator2.png")' alt="Refrigerator" class="appliance-card-image" />
                        }
                        else
                        if (item.Refrigerator_Id % 9 == 3)
                        {
                            <img src='@Url.Content("~/Images/refrigerator3.png")' alt="Refrigerator" class="appliance-card-image" />
                        }
                        else
                        if (item.Refrigerator_Id % 9 == 4)
                        {
                            <img src='@Url.Content("~/Images/refrigerator4.png")' alt="Refrigerator" class="appliance-card-image" />
                        }
                        else
                        if (item.Refrigerator_Id % 9 == 5)
                        {
                            <img src='@Url.Content("~/Images/refrigerator5.png")' alt="Refrigerator" class="appliance-card-image" />
                        }
                        else
                        if (item.Refrigerator_Id % 9 == 6)
                        {
                            <img src='@Url.Content("~/Images/refrigerator6.png")' alt="Refrigerator" class="appliance-card-image" />
                        }
                        else
                        if (item.Refrigerator_Id % 9 == 7)
                        {
                            <img src='@Url.Content("~/Images/refrigerator7.png")' alt="Refrigerator" class="appliance-card-image" />
                        }
                        else
                        if (item.Refrigerator_Id % 9 == 8)
                        {
                            <img src='@Url.Content("~/Images/refrigerator8.png")' alt="Refrigerator" class="appliance-card-image" />
                        }
                        else
                        if (item.Refrigerator_Id % 9 == 0)
                        {
                            <img src='@Url.Content("~/Images/refrigerator9.png")' alt="Refrigerator" class="appliance-card-image" />
                        }
                    </a>
                    <p>
                        <button onclick="location.href='@Url.Action("Details", "refrigerators",new { id = @item.Refrigerator_Id })'" type="button" class="appliance-card-but w-button" style="height:100px">
                            @item.Brand: @item.Model_No
                        </button>
                    </p>
                </div>
                    }
                }
            </div>
        </div>
        <br>
        <br>

        @* code to display page count based on the data in the database. *@

        <div class="pagecount" style="margin:auto; text-align:center">
            Page @(Model.Refrigerators.PageCount < Model.Refrigerators.PageNumber ? 0 : Model.Refrigerators.PageNumber)
            of @Model.Refrigerators.PageCount   @Html.PagedListPager(Model.Refrigerators, page => Url.Action("Index", new { page, currentfilter = ViewBag.currentfilter, currentRatings = ViewBag.currentRatings }))
        </div>
    </body>
